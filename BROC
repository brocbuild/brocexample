#edit-mode: -*- python -*-
#coding:utf-8

COMPILER_PATH('/usr/bin')

#add this to deal with dependency conflict
CONFIGS("brocbuild/configure@master@branch")

#add this to get dependency conflict
CONFIGS("brocbuild/test@master@branch")

#planish dependency
CONFIGS("brocbuild/log@master@branch")

#add a dependency
CONFIGS("brocbuild/function@master@branch")

#show the debug mode and the release mode
CXXFLAGS("-Werror -O0", "-Wall -O2")

#get a "hello world" application
APPLICATION("example_application", Sources("example_application.cpp"))
UT_APPLICATION("example_ut_application", Sources("example_ut_application.cpp"), UTArgs("-c conf -h help"))

#get a staticlibrary
STATIC_LIBRARY("example_library", Sources("example_library.cpp"))

#use dependency module ub, get an application
APPLICATION("example_dependency", Sources("example_dependency.cpp", Include("/home/users/liruihao/broc/protobuf/include")), Libs("$OUT_ROOT/brocbuild/function/output/lib/libfunction.a", "$OUT_ROOT/brocbuild/configure/output/lib/libconfigure.a", "$OUT_ROOT/brocbuild/log/output/lib/liblog.a", "/home/users/liruihao/broc/protobuf/lib/libprotobuf.a"))
